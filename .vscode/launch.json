{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend Standalone",
            "type": "python",
            "request": "launch",
            "program": "backend/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Frontend Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ]
        }
    ]
}